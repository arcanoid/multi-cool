<div class="page-header">
  <h1>JSON comparer</h1>
</div>

<%= form_tag json_comparer_web_resources_url do %>
    <div class="row">
      <div class="col-xs-12 col-md-6">
        <div class="form-group">
          <label for="initial_text">Initial Json</label>
          <%= text_area_tag :initial_text, @initial_text, :rows => 15, :class => "form-control" %>
        </div>

        <div class="form-group">
          <label for="initial_text">Json to compare to</label>
          <%= text_area_tag :final_text, @final_text, :rows => 15, :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= submit_tag 'Convert', :class => 'btn btn-primary' %>
        </div>
      </div>

      <div class="col-xs-12 col-md-6">
        <div class="form-group">
          <label>Result</label>
          <pre><%= @result %></pre>
        </div>
      </div>
    </div>
<% end %>