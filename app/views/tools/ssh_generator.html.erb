<div class="page-header">
  <h1>SSH generator</h1>
</div>

<%= form_tag ssh_generator_tools_url do %>
    <div class="row">
      <div class="col-xs-12 col-md-6">
        <div class="form-group">
          <label for="initial_text">Comment (optional)</label>
          <%= text_area_tag :comment, params[:comment], :rows => 5, :class => 'form-control' %>
        </div>

        <div class="form-group">
          <label for="initial_text">Passphrase (optional)</label>
          <%= text_area_tag :passphrase, params[:passphrase], :rows => 5, :class => 'form-control' %>
        </div>

        <div class="form-group">
          <label for="initial_text">Bits</label>
          <%= text_field_tag :bits, (params[:bits].present? ? params[:bits] : 1024), :class => 'form-control' %>
        </div>

        <div class="form-group">
          <%= label_tag :type, 'Select type' %>
          <%= select_tag :type, options_for_select([ 'RSA', 'DSA'], params[:type]), :class => 'form-control' %>
        </div>

        <div class="form-group">
          <%= submit_tag 'Generate', :class => 'btn btn-primary' %>
        </div>
      </div>

      <div class="col-xs-12 col-md-6">
        <div class="form-group">
          <label for="digested_text">Private key</label>
          <%= text_area_tag :digested_text, @ssh_key.private_key, :rows => 5, :class => 'form-control' %>
        </div>

        <div class="form-group">
          <label for="digested_text">Public key</label>
          <%= text_area_tag :digested_text, @ssh_key.public_key, :rows => 5, :class => 'form-control' %>
        </div>

        <div class="form-group">
          <label for="digested_text">SSH Public key</label>
          <%= text_area_tag :digested_text, @ssh_key.ssh_public_key, :rows => 5, :class => 'form-control' %>
        </div>
      </div>
    </div>
<% end %>
