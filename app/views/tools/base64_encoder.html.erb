<div class="page-header">
    <h1>Base64 encoder / decoder</h1>
</div>

<%= form_tag base64_encoder_tools_url do %>
    <div class="row">
      <div class="col-xs-12">
        <div class="form-group">
          <label for="file">Text to encode / decode</label>
          <%= text_area_tag :full_text, @final_text, :rows => 15, :class => 'form-control' %>
        </div>

        <div class="form-group">
          <%= radio_button_tag(:type, 'decode', (params[:type] == 'decode')) %>
          <%= label_tag(:type_decode, "Decode") %>
          <%= radio_button_tag(:type, 'encode', (!params[:type].present? || params[:type] == 'encode')) %>
          <%= label_tag(:type_encode, 'Encode') %>
        </div>

        <div class="form-group">
          <%= submit_tag 'Refresh', :class => 'btn btn-primary' %>
        </div>
      </div>
    </div>
<% end %>