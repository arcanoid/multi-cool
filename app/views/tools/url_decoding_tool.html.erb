<div class="page-header">
    <h1>Url encoder / decoder</h1>
</div>

<%= form_tag url_decoding_tool_tools_url do %>
    <div class="row">
      <div class="col-xs-12">
        <div class="text-right">
          <a class="btn btn-default clipboard-button" data-clipboard-target="#full_text"><i class="fa fa-files-o"></i></a>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12">
        <div class="form-group">
          <label for="full_text">Text to encode / decode</label>
          <%= text_area_tag :full_text, @final_text, :rows => 15, :class => 'form-control' %>
        </div>

        <div class="form-group">
          <%= radio_button_tag :type, 'decode', (!params[:type].present? || params[:type] == 'decode') %>
          <%= label_tag :type_decode, "Decode url" %>
          <%= radio_button_tag :type, 'encode', (params[:type] == 'encode') %>
          <%= label_tag :type_encode, 'Encode url' %>
        </div>

        <div class="form-group">
          <%= submit_tag 'Refresh', :class => 'btn btn-primary' %>
        </div>
      </div>
    </div>
<% end %>

<script>
    var clipboard = new Clipboard('.clipboard-button');
</script>
