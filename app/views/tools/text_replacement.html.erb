<div class="page-header">
    <h1>Text Replacement</h1>
</div>

<%= form_tag text_replacement_tools_url do %>
    <div class="row">
        <div class="row">
            <div class="col-xs-12">
                <div class="text-right">
                    <a class="btn btn-default clipboard-button" data-clipboard-target="#formated_result"><i class="fa fa-files-o"></i></a>
                </div>
            </div>
        </div>

        <div class="col-xs-12 col-md-6">
            <div class="form-group">
                <label for="initial_text">Text to replace</label>
                <%= text_area_tag :initial_text, @initial_text, :rows => 15, :class => "form-control" %>
            </div>

            <div class="form-group">
                <label for="replacement_rule_from">Characters to replace</label>
                <%= text_area_tag :replacement_rule_from, @replacement_rule_from, :rows => 2, :class => "form-control" %>
            </div>

            <div class="form-group">
                <label for="replacement_rule_to">Characters to replace with</label>
                <%= text_area_tag :replacement_rule_to, @replacement_rule_to, :rows => 2, :class => "form-control" %>
            </div>

            <div class="form-group">
                <%= submit_tag 'Replace', :class => 'btn btn-primary' %>
            </div>
        </div>

        <div class="col-xs-12 col-md-6">
            <div class="form-group">
                <label>Replacement result</label>
                <pre id="formated_result"><%= @final_text %></pre>
            </div>
        </div>
    </div>
<% end %>

<script>
    var clipboard = new Clipboard('.clipboard-button');
</script>
